      <div class="box" id="heading">
            <h1><%=kindOfDay%></h1>
      </div>
      <div class="box">
            <%for(var i=0;i<newItems.length;i++){%>
                  <form action="/delete" method="post">
                        <div class="item">
                              <input type="checkbox" value="<%=newItems[i]._id%>" name="checkbox" onChange="this.form.submit()">
                              <p><%=newItems[i].name%> </p>
                        </div>
                  </form>
                  
            <%}%>

            <form class="item" action="/" method="post">
                  <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                  <button type="submit" name="index" value="<%=kindOfDay%>">+</button>
            </form>
      </div>
            
      

