      <div class="box" id="heading">
            <h1><%=kindOfDay%></h1>
      </div>
      <div class="box">
            <%for(var i=0;i<newItems.length;i++){%>
                  <div class="item">
                        <input type="checkbox">
                        <p><%=newItems[i]%> </p>
                  </div>
            <%}%>

            <form action="/" method="post">
                  <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                  <button type="submit" name="index" value="<%=kindOfDay%>">+</button>
            </form>
      </div>
            
      

